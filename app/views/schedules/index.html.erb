<div class="row">
  <div class="large-12 columns">
    <h1>Listing schedules</h1>

    <table>
      <thead>
      <tr>
        <th>Tweet at</th>
        <th>Twitter</th>
        <th>Tweet</th>
        <th>Image url</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @schedules.each do |schedule| %>
          <tr>
            <td><%= schedule.tweet_at %></td>
            <td><%= schedule.twitter_id %></td>
            <td><%= schedule.tweet %></td>
            <td><%= schedule.image_url %></td>
            <td><%= link_to 'Show', schedule %></td>
            <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
            <td><%= link_to 'Destroy', schedule, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New Schedule', new_schedule_path %>
  </div>
</div>


