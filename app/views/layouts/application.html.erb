<!DOCTYPE html>
<html>
<head>
  <title>Scheduling</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'vendor/modernizr', 'data-turbolinks-track' => true %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name">
      <h1><a href="/">Scheduling</a></h1>
    </li>
    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
  </ul>

  <section class="top-bar-section">
    <ul class="right">
      <% if user_signed_in? %>
          <li><%= link_to "Schedule", schedules_path %></li>
      <% end %>
      <li class="has-dropdown">
        <% if user_signed_in? %>
            <a href="#" data-dropdown="dropdown1"> <%= "#{image_tag current_user.remote_avatar_url, :size => "40x40"} #{current_user.name }".html_safe %></a>
            <ul id="dropdown1" class="f-dropdown" data-dropdown-content>
              <li class="row"><%= link_to "My Profile", profile_welcomes_path %></li>
              <li class="row"><%= link_to "Log Out", destroy_user_session_path, :method => :delete %></li>
            </ul>
        <% else %>
            <a href="#" data-dropdown="dropdown2">Sign In/Sign Up</a>
            <ul id="dropdown2" class="f-dropdown" data-dropdown-content>
              <li class="row"><%= link_to "Log In", user_session_path %></li>
              <li class="row"><%= link_to "Register", new_user_registration_path %></li>
              <li class="row"><%= link_to "Via Twitter", omniauth_authorize_path(:user, :twitter) %></li>
            </ul>
        <% end %>
      </li>
    </ul>
  </section>
</nav>
<%= render 'layouts/messages' %>
<%= yield %>

</body>
</html>

<script type="application/javascript">
    $(function () {
        $(document).foundation();
    });
</script>